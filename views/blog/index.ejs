<% include ../partials/header %>

<!--*************NAVBAR******************-->

    <div class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    <a class="navbar-brand red" href="/">Korin Figel</a>
            </div> <!--closes navbar-header div-->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(currentUser) { %>
                    <li><a href="#">Signed In As <%= currentUser.username %></a></li>
                    <li><a href="/logout">Logout</a></li>
                    <% } %>
                    <li><a class="rainbow-text" href="/about">About</a></li>
                    <li><a href="/work">My Work</a></li>
                    <li class="active"><a href="/blog">Blog</a></li>
                </ul>
            </div> <!--closes navbar-collapse div-->
        </div> <!--closes div container-->
    </div> <!--closes navbar default role navigation div-->

<!--**************END NAVBAR*****************-->

        <!--*********JUMBOTRON*********-->
    <div class="container">
        <div class="jumbotron">
          <h1 class="jumbo-h1">Welcome To My Blog</h1>
        </div>
        <% if(!currentUser) { %>
            <div>
            <p class="blog-note">Please login to your account to view my blog posts.</p>
            </div>

            <div class="btn-container">
            <button>
                <a class="rainbow-button" href="/login" alt="Login"></a>
            </button>
            <button>
                <a class="rainbow-button" href="/register" alt="SignUp"></a>
            </button>
            </div>
        <% } else { %>
            <div class="buttonz">
              <button>
                <a id="welcome-rainbow-button" class="rainbow-button" href="#" alt="Welcome, <%= currentUser.username %>!"></a>
              </button>
        <% } %>
    <!--</div>-->

<!--ADD IF CURRENTUSER === ADMIN THEN YOU CAN SEE BUTTON TO ADD NEW POST-->

    <% if(currentUser) { %>
        <% if(currentUser.isAdmin) { %>
        <button id="new-post-button">
            <a class="rainbow-button" href="/blog/new" alt="Create New Blog Post"></a>
        </button>
        <% } %>
    <% } %>
            </div>


<!-- Blog Posts************************************** -->
  <div class="blog">
    <h2>Korin's Blog</h2>
    <% if(currentUser) { %>
        <div class="row">
            <% blog.forEach(function(blog) { %>
               <div class="col">
                   <div class="blog-post-heading">
                     <p>
                       <%= blog.date.toDateString() %>
                     </p>
                      <h4 id="blog-title"><span class="rainbowz"><%= blog.title %></span></h4>
                   </div>
                   <div class="blog-post-main">
                       <p class=blog-content><%= blog.content %></p>
                   </div>
               <% }); %>
            </div>
        </div>
  </div>
</div>
    <% } %>



<% include ../partials/footer %>
